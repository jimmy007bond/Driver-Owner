<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app_place"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutTop1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/teal_A700">

        <TextView

            android:id="@+id/t12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:text="Add driver"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/ratingBarbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/t13"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driver_bill"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@+id/t12"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

        <TextView

            android:id="@+id/t13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/driver_bill"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutTop1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/home_can1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/blue_grey_900"
            android:clickable="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Cancel"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/home_sav1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/top"
            android:clickable="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Add"
            android:textColor="@color/blue_grey_900"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
