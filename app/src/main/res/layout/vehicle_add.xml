<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            app:expanded="false">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarvv"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical|center_horizontal|center"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Add"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView101"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:text=" Vehicle"
                        android:textColor="@color/yellow_A700"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar_v"
            android:background="@android:color/transparent"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:orientation="vertical"

                android:theme="@style/ThemeOverlay.AppCompat.Dark">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColorHint="@color/top"
                        android:visibility="visible">


                        <EditText
                            android:id="@+id/vehicle_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:drawableEnd="@android:drawable/ic_notification_overlay"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Vehicle no"
                            android:inputType="textNoSuggestions"
                            android:textAllCaps="true" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbarVehicle"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_grey_900"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Add four different images of your vehicle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/Vehicle_image_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/addimage" />

                    <ImageView
                        android:id="@+id/Vehicle_image_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/addimage" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Vehicle_image_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/addimage" />

                    <ImageView
                        android:id="@+id/Vehicle_image_4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/addimage" />

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.33"
                        android:textColorHint="@color/top"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/vtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="false"
                            android:autofillHints="@string/select"
                            android:background="@android:drawable/btn_dropdown"
                            android:ems="8"
                            android:focusableInTouchMode="false"
                            android:gravity="center_horizontal"
                            android:minHeight="50dp"
                            android:scrollbarSize="0dp"
                            android:spinnerMode="dropdown" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.33"
                        android:textColorHint="@color/top"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/vcompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.33"
                            android:adjustViewBounds="false"
                            android:background="@android:drawable/btn_dropdown"
                            android:ems="8"
                            android:focusableInTouchMode="false"
                            android:gravity="center_horizontal"
                            android:minHeight="50dp"
                            android:scrollbarSize="0dp"
                            android:spinnerMode="dropdown" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.33"
                        android:textColorHint="@color/top"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/vmodel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="false"
                            android:background="@android:drawable/btn_dropdown"
                            android:ems="8"
                            android:focusableInTouchMode="false"
                            android:gravity="center_horizontal"
                            android:minHeight="50dp"
                            android:prompt="@string/select"
                            android:scrollbarSize="0dp"
                            android:spinnerMode="dropdown" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/submitv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:fontFamily="@font/roboto_medium"
                    android:minWidth="200dp"
                    android:text="SUBMIT"
                    android:textColor="@color/top" />
            </LinearLayout>


        </ScrollView>

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
