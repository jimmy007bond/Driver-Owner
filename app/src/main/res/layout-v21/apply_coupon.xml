<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:visibility="visible">



        <TextView
            android:id="@+id/home_add"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/radioGroup"
            android:background="@color/blue_grey_900"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Add driver for employment"
            android:textColor="@color/white" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_add"
            android:textColorHint="@color/light_green_A700"
            android:visibility="visible">

            <EditText
                android:id="@+id/app_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:hint="Driver Identification code"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_pin"
            android:layout_weight="0.9">

            <Button
                android:id="@+id/home_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:text="CANCEL"
                android:textColor="@color/com_facebook_blue" />

            <Button
                android:id="@+id/home_sav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:text="OK"
                android:textColor="@color/com_facebook_blue" />
        </RelativeLayout>


</RelativeLayout>

