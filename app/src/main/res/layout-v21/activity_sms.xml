<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <com.geekworkx.oho.Adapters.HeightWrappingViewPager
        android:id="@+id/viewPagerVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/blue_grey_700">

                <TextView
                    android:id="@+id/loginAs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Login as Driver"
                    android:textAlignment="center"
                    android:textColor="@color/blue_grey_800"
                    android:textSize="24sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutTop"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/blue_grey_900"
                android:gravity="bottom"
                android:minHeight="256dp">

                <LinearLayout
                    android:id="@+id/main_ui_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/ic_account_grey600_36dp" />

                            <android.support.design.widget.TextInputLayout
                                style="@style/Widget.Design.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/top"
                                app:hintTextAppearance="@style/MyHintText">

                                <EditText
                                    android:id="@+id/u_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:minEms="10"
                                    android:hint="Name"
                                    android:inputType="textPersonName"
                                    android:shadowColor="@color/top"
                                    android:textColor="@color/top"
                                    android:textColorHighlight="@color/top"
                                    android:textColorHint="@color/top"
                                    android:textColorLink="@color/top"
                                    android:theme="@style/MyEditText" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/ic_phone_grey600_36dp" />

                            <android.support.design.widget.TextInputLayout
                                style="@style/Widget.Design.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/top"
                                app:hintTextAppearance="@style/MyHintText">

                                <EditText
                                    android:id="@+id/u_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:minEms="10"
                                    android:hint="Mobile No"
                                    android:inputType="number|phone"
                                    android:shadowColor="@color/top"
                                    android:textColor="@color/top"
                                    android:textColorHighlight="@color/top"
                                    android:textColorHint="@color/top"
                                    android:textColorLink="@color/top"
                                    android:theme="@style/MyEditText" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/first_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/u_mobile"
                        android:layout_marginTop="10dp"
                        android:background="@color/blue_grey_900"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/already"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/main_ui_container"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@android:drawable/ic_menu_send"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Already Registerd"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_marginTop="67dp"
                android:adjustViewBounds="false"
                android:background="@android:drawable/picture_frame"
                android:elevation="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/com_facebook_profile_picture_blank_square" />


        </RelativeLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/second_pager_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Please enter the OTP "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/inputOtp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/edit_text"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:hint="OTP"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textSize="18sp" />

            <Button
                android:id="@+id/second_butona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue_grey_900"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Next"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/third_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rf3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/blue_grey_700">

                <TextView

                    android:id="@+id/login_already"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Login as Owner"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rf3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/blue_grey_900"
                android:gravity="bottom"
                android:minHeight="256dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/ic_phone_grey600_36dp"
                               />

                            <android.support.design.widget.TextInputLayout
                                style="@style/Widget.Design.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/top"
                                app:hintTextAppearance="@style/MyHintText">

                                <EditText
                                    android:id="@+id/mobile_already"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:minEms="10"
                                    android:hint="Mobile No"
                                    android:inputType="number|phone"
                                    android:shadowColor="@color/top"
                                    android:textColor="@color/top"
                                    android:textColorHighlight="@color/top"
                                    android:textColorHint="@color/top"
                                  />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/ic_account_grey600_36dp" />

                            <android.support.design.widget.TextInputLayout
                                style="@style/Widget.Design.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/top"
                                app:hintTextAppearance="@style/MyHintText">

                                <EditText
                                    android:id="@+id/identification"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:minEms="10"
                                    android:hint="ID"
                                    android:inputType="number"
                                    android:shadowColor="@color/top"
                                    android:textColor="@color/top"
                                    android:textColorHighlight="@color/top"
                                    android:textColorHint="@color/top"
                                    android:textColorLink="@color/top" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/third_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/blue_grey_900"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/forgot_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@android:drawable/ic_menu_send"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Forgot Identification"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>


    </com.geekworkx.oho.Adapters.HeightWrappingViewPager>


    <ProgressBar
        android:id="@+id/progress_rider"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
